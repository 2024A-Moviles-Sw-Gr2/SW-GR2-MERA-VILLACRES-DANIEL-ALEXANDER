<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_sqlite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ECrudEntrenador">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_descripción"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:hint="Ingrese descripción"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buscar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Buscar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_crear_bdd"
        app:layout_constraintEnd_toStartOf="@+id/btn_crear_bdd"
        app:layout_constraintTop_toTopOf="@+id/btn_crear_bdd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crear_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/input_descripción"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/input_descripción"
        app:layout_constraintTop_toBottomOf="@+id/input_descripción" />

    <Button
        android:id="@+id/btn_actualizar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_crear_bdd"
        app:layout_constraintStart_toEndOf="@+id/btn_crear_bdd"
        app:layout_constraintTop_toTopOf="@+id/btn_crear_bdd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_eliminar_bdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_bdd"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_bdd"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_bdd" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_id"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_marginBottom="40dp"
        android:hint="Ingrese id"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre"
        app:layout_constraintStart_toStartOf="@+id/input_nombre" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_nombre"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_marginBottom="40dp"
        android:hint="Ingrese nombre"
        app:layout_constraintBottom_toTopOf="@+id/input_descripción"
        app:layout_constraintEnd_toEndOf="@+id/input_descripción"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripción" />

</androidx.constraintlayout.widget.ConstraintLayout>