<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_formulario_libro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioLibros">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_titulo_libro"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="108dp"
        android:hint="Titulo"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_formulario_libro"
        app:layout_constraintStart_toStartOf="@+id/tv_formulario_libro"
        app:layout_constraintTop_toBottomOf="@+id/tv_formulario_libro" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_precio_libro"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:hint="Precio"
        app:layout_constraintEnd_toEndOf="@+id/ti_anio_libro"
        app:layout_constraintStart_toStartOf="@+id/ti_anio_libro"
        app:layout_constraintTop_toBottomOf="@+id/ti_anio_libro" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_disponible_libro"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:hint="Esta disponible? si/no"
        app:layout_constraintEnd_toEndOf="@+id/ti_precio_libro"
        app:layout_constraintStart_toStartOf="@+id/ti_precio_libro"
        app:layout_constraintTop_toBottomOf="@+id/ti_precio_libro" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_anio_libro"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:hint="Año de publicación"
        app:layout_constraintEnd_toEndOf="@+id/ti_autor_libro"
        app:layout_constraintStart_toStartOf="@+id/ti_autor_libro"
        app:layout_constraintTop_toBottomOf="@+id/ti_autor_libro" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_autor_libro"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:hint="Autor"
        app:layout_constraintEnd_toEndOf="@+id/ti_titulo_libro"
        app:layout_constraintStart_toStartOf="@+id/ti_titulo_libro"
        app:layout_constraintTop_toBottomOf="@+id/ti_titulo_libro" />

    <Button
        android:id="@+id/btn_formulario_libro"
        android:layout_width="109dp"
        android:layout_height="63dp"
        android:layout_marginStart="12dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_disponible_libro" />

    <TextView
        android:id="@+id/tv_formulario_libro"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:text="Actualizar Libro"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>